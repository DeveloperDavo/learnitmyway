{
  "name": "learnitmyway",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/DeveloperDavo/learnitmyway.git",
  "author": "Developer Davo <DeveloperDavo@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "browser-sync": "browser-sync start --ss 'public'",
    "browser-sync:watch": "browser-sync start --ss 'public' -f 'public'",
    "build": "npm run postcss && npm run imagemin && hugo",
    "imagemin": "imagemin src/img/* --out-dir=static/dist/img",
    "postcss": "postcss src/css/styles.css -d static/dist/ styles.css",
    "postcss:watch": "postcss src/css/styles.css -d static/dist/ styles.css -w",
    "start": "parallelshell 'hugo -w' 'npm run postcss:watch' 'npm run browser-sync:watch'"
  },
  "dependencies": {
    "browser-sync": "^2.24.7",
    "cssnano": "^4.1.4",
    "imagemin": "^6.0.0",
    "imagemin-cli": "^3.0.0",
    "normalize.css": "^8.0.0",
    "postcss": "^7.0.5",
    "postcss-cli": "^6.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.0"
  },
  "devDependencies": {
    "parallelshell": "3.0.1"
  }
}
