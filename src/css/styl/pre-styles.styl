@import 'global.styl'

.body-wrapper
  background-color: #f4f4f4
  font-family: 'avenir next', avenir, sans-serif

.summary 
  margin-bottom: 1rem
  padding: 2rem
  color: text-color
  overflow: hidden
  &__date
    color: text-color-light
    font-size: .875rem;
  &__title 
    font-size: 1.5rem
  &__excerpt
    color: text-color-light
    line-height: 1.5
    font-family: georgia, times, serif
    font-size: 1rem
    @media not-small
      font-size: 1.25rem

.blog-extras-container
  box-shadow: card-shadow
  background-color: white
  color: text-color
  padding: 1rem
  line-height: 1.5
  margin-top: 0.5rem
  font-family: georgia, times, serif
  font-size: 1rem
  @media not-small
    font-size: 1.25rem
  & a
    color: currentColor
    &:hover
    &:focus 
      opacity: 0.5
      transition: opacity 0.15s ease-in
  &__title
    font-weight: bolder
  &--center
    text-align: center