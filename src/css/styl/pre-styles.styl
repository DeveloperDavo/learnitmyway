:root {
  --primary: #1976d2;
  --primary-dark: #004ba0;
  --primary-light: #63a4ff;
  --text-color: rgba(0, 0, 0, 0.84);
}

card-shadow
  box-shadow: 0 0 4px 2px rgba(0, 0, 0, 0.2)
not-small = "screen and (min-width: 30em)"
text-color = rgba(0, 0, 0, 0.84)
text-color-light = rgba(0, 0, 0, 0.6)

.body-wrapper
  background-color: #f4f4f4
  font-family: 'avenir next', avenir, sans-serif

.summary 
  margin-bottom: 1rem
  padding: 2rem
  color: text-color
  overflow: hidden
  &__date
    color: text-color-light
    font-size: .875rem;
  &__title 
    font-size: 1.5rem
  &__excerpt
    color: text-color-light
    line-height: 1.5
    font-family: georgia, times, serif
    font-size: 1rem
    @media not-small
      font-size: 1.25rem

.blog-extras-container
  box-shadow: card-shadow
  background-color: white
  color: text-color
  padding: 1rem
  line-height: 1.5
  margin-top: 0.5rem
  font-family: georgia, times, serif
  font-size: 1rem
  @media not-small
    font-size: 1.25rem
  & a
    color: currentColor
    &:hover
    &:focus 
      opacity: 0.5
      transition: opacity 0.15s ease-in
  &__title
    font-weight: bolder
  &--center
    text-align: center